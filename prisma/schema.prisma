// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum AccountType {
  EMAIL
  PHONE
}

enum VerificationCodeType {
  EMAIL_CONFIRMATION
  PHONE_CONFIRMATION
  PASSWORD_RESET
}

enum VerificationCodeStatus {
  PENDING
  USED
  EXPIRED
}

// User model - compatible with NextAuth
model User {
  id            String    @id @default(cuid())
  name          String
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  phone         String?   @unique
  phoneVerified DateTime? @map("phone_verified")
  image         String?
  password      String?   // Hashed password
  accountType   AccountType @default(EMAIL) @map("account_type")

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  lastLoginAt   DateTime? @map("last_login_at")

  // Relations
  accounts      Account[]
  sessions      Session[]
  verificationCodes VerificationCode[]

  @@map("users")
}

// Account model - for OAuth providers (NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session model - for NextAuth
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Verification Token model - for email verification (NextAuth)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Custom verification code model for email/phone confirmation and password recovery
model VerificationCode {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  code      String
  type      VerificationCodeType
  status    VerificationCodeStatus @default(PENDING)
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type, status])
  @@map("verification_codes")
}
