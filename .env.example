# Database
DATABASE_URL="postgresql://user:password@localhost:5432/wapp?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# Email Service (Optional - for account confirmation and recovery)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# SMS Service (Optional - for phone verification)
SMS_PROVIDER=""
SMS_API_KEY=""
SMS_FROM=""

# App Config
NODE_ENV="development"

# API Base URL (Optional)
# For SEPARATED backend (frontend and backend on different servers):
#   - Set NEXT_PUBLIC_API_BASE_URL to your backend server URL
#   - Example: NEXT_PUBLIC_API_BASE_URL="https://api.myapp.com"
#   - This URL will be used in both browser and server
#
# For MONOLITH (current setup - frontend and backend together):
#   - Leave NEXT_PUBLIC_API_BASE_URL unset
#   - Client will use relative URLs automatically
#   - Server will use NEXTAUTH_URL
#
# NEXT_PUBLIC_API_BASE_URL=""  # Set this only when you separate the backend
# API_BASE_URL="http://localhost:3000"  # Server-to-server (rarely needed)

NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Subscription Config
TRIAL_DAYS="7"
GRACE_PERIOD_DAYS="3"
INVITATION_EXPIRY_DAYS="30"
DEFAULT_CURRENCY="USD"
PAYMENT_MODE="sandbox"  # sandbox | production

# Auto-start trial when user registers
AUTO_TRIAL_ENABLED="true"

# Payment Providers (Production)
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Apple In-App Purchase
APPLE_SHARED_SECRET=""

# Google Play Billing
GOOGLE_SERVICE_ACCOUNT_KEY=""

# Sandbox Webhook Secret (for testing)
SANDBOX_WEBHOOK_SECRET="sandbox_secret_key_12345"

# WhatsApp Sharing (Optional)
# If provided, invitation links will use this number
WHATSAPP_SHARE_NUMBER=""
